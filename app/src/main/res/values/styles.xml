<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">    <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

        <!--<item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>-->

    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbarTitle</item>
        <!--<item name="android:layout_marginLeft">@dimen/dimen_three</item>-->
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>


    <!--View Divider-->
    <style name="viewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.chip" parent="Widget.MaterialComponents.Chip.Choice">

    </style>

    <!--Used in Navigation drawer header-->
    <style name="customNavigationHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorNavigationHeaderItem</item>
        <item name="android:padding">@dimen/dimen_three</item>
    </style>

    <!--Used in Navigation drawer items-->
    <style name="customNavigationItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorNavigationItem</item>
        <item name="android:textSize">@dimen/dimen_medium</item>
    </style>

    <!--Used where you set label-->
    <style name="customLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorLabel</item>
    </style>

    <!--Used where you set label value-->
    <style name="customLabelValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_large</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorValue</item>
    </style>

    <!--Used where you set Info label value-->
    <style name="customInfoLabelValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorInfoValue</item>
    </style>


    <!--Used for extra labels-->
    <style name="customTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorLabel</item>
    </style>


    <!--Used for extra labels-->
    <style name="customTextNotes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorNotes</item>
    </style>


    <!--Used while taking user entry-->
    <style name="customEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_btn_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">@dimen/dimen_eight</item>
        <item name="android:paddingBottom">@dimen/dimen_eight</item>
        <item name="android:paddingStart">@dimen/dimen_twelve</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:textSize">@dimen/dimen_medium</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>

    <!--Used while getting value from user like registration and authentication only-->
    <style name="customEditText_Rectangle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:textSize">@dimen/dimen_large</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:background">@drawable/default_edit_text_selector</item>
        <item name="android:padding">@dimen/dimen_ten</item>
    </style>


    <style name="customButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_button_height</item>
        <item name="android:layout_marginTop">@dimen/dimen_five</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/dimen_medium</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


    <!-- Alert Dialog Theme -->
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/customTextView</item>

        <!-- Used for the title as well as message -->
        <item name="android:textColorPrimary">@color/colorAlertTextColor</item>
        <!-- Used for the background
        <item name="android:background">@android:color/white</item>-->

        <!--        Riddhi Change-->
        <item name="android:windowBackground">@drawable/all_corner_round_drawable</item>

        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>

    </style>

    <!--Custom Alert-->
    <style name="customTextViewTitleAlert">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_alert_title_size</item>
        <item name="android:textColor">@color/colorAlertTitleColor</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MyTitleTextStyle">
        <!-- Used for specially title -->
        <item name="android:textColor">@color/colorAlertTitleColor</item>
        <!-- Used for specially title -->
        <item name="android:textSize">@dimen/dimen_alert_title_size</item>
    </style>


    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">@color/colorAlertButtonDisable</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">@color/colorAccent</item>

        <item name="android:textStyle">bold</item>

        <item name="android:textAllCaps">true</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">@color/colorAccent</item>

        <item name="android:textStyle">bold</item>

        <item name="android:textAllCaps">true</item>

    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:layout_gravity">center</item>
        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@android:color/transparent</item>


    </style>


    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorNotes</item>
        <item name="colorControlActivated">@color/colorratingActive</item>
    </style>


    <!--Used while getting value from user like registration and authentication only-->
    <style name="CustomTextInput" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="boxBackgroundMode">outline</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="background">@color/transparent</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <!-- <item name="android:strokeColor">@color/colorHint</item>-->
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <dimen name="default_font">15sp</dimen>

    <style name="customTextViewHeaderSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_font</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
